<h1>Articles</h1>

<ol class='w-100 list-group'>
  <% @articles.each do |article| %>
    <li class="text-decoration-none list-group-item">
      <%= link_to article.title, article_path(article), class: "text-decoration-none"%>
    </li>
  <% end %>
</ol>

<%= link_to 'Create a new article', new_article_path, class: 'btn btn-primary mt-2'%>
